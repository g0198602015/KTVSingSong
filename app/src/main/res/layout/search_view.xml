<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e7e6e3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e4f5f4f1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="性別"
                android:textColor="#e4000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:id="@+id/searchview_boy_checkbox"
                android:textColor="#e4393836" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textColor="#e4393836"
                android:id="@+id/searchview_girl_checkbox" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#e4f5f4f1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:textColor="#e4000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="字數"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="歌名關鍵字"
                android:id="@+id/searchview_search_songname_EditText"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:textColor="#e4393836"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 ~ 4"
                android:id="@+id/searchview_one2four_checkbox" />

            <CheckBox
                android:textColor="#e4393836"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 ~ 8"
                android:id="@+id/searchview_five2eight_checkbox" />

            <CheckBox
                android:textColor="#e4393836"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 ~"
                android:id="@+id/searchview_nineUP_checkbox" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#e4f5f4f1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:textColor="#e4000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="語言"
                android:id="@+id/textView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:textColor="#e4393836"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="國"
                android:id="@+id/searchview_chinese_checkbox" />

            <CheckBox
                android:textColor="#e4393836"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="台"
                android:id="@+id/searchview_taiwanese_checkbox" />

            <CheckBox
                android:textColor="#e4393836"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英"
                android:id="@+id/searchview_english_checkbox" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查詢"
            android:id="@+id/search_view_search_button"
            android:background="#648db688"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
